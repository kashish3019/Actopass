<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>home</title>
  <link rel="stylesheet" href="/css/indx.css">
  <style>
    .content-div {
      width: 100%;
      margin-left: 30px;
      margin-top: 30px;
    }

    #box h2 {
      font-size: 20px;
      font-family: sans-serif;
      font-weight: 300;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    #part1 {
      font-size: 20px;
      margin-top: 60px;
    }

    /* Filter buttons styling */
    .filter-buttons {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
      margin-top: 20px;
    }

    .filter-buttons button {
      background-color: white;
      color: black;
      border: 2px solid #ccc;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 20px;
      cursor: pointer;
      transition: all 0.3s ease-in-out;
    }

    .filter-buttons button:hover {
      background-color: #8e2fd1;
      color: white;
      border-color: #8e2fd1;
    }

    #box {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      padding-top: 20px;
      width: 100%;
    }

    .content-div h1 {
      font-size: 20px;
      font-family: sans-serif;
      font-weight: 400;
      margin-left: 30px;
      letter-spacing: 1px;
    }

    .content-div img {
      width: 100%;
    }

    .sticky-part {
      position: sticky;
      top: 0;
    }
  </style>
</head>

<body>
  <%- include('nav') %>
    <div class="container">
      <div class="row justify-center">
        <div id="part1">
          <div class="sticky-part">
            <div id="srch">
              <i class="fa-solid fa-magnifying-glass"></i>
              <input type="text" placeholder="Search" id="search">
            </div>
            <div class="filter-buttons">
              <button id="all" value="all">All</button>
              <button value="sports" id="sports">Sports</button>
              <button value="concert" id="concert">Concert</button>
              <button value="conference" id="conference">Conference</button>
              <button value="notebook" id="notebook">Notebook</button>
              <button value="camera" id="camera">Camera</button>
              <button value="headphones" id="headphones">Headphones</button>
              <button value="other" id="other">Other</button>
            </div>
          </div>
        </div>
        <div class="content-div row">
          
          <div id="box"></div>
        </div>
      </div>
    </div>
    <%- include('footer') %>
</body>

<script>
  fetch("/product")
    .then((response) => response.json())
    .then((response) => display(response))
    .catch((error) => console.log(error));

  const display = (data) => {
    console.log(data);
    document.getElementById("box").innerHTML = "";
    data.map((ele) => {
      if (ele.item) {
        ele = ele.item;
      }

      let img = document.createElement("img");
      img.src = ele.img;
      img.classList.add("explore-img"); // Applying the new CSS class for images

      let title = document.createElement("h2");
      title.innerHTML = ele.title;

      let titleDiv = document.createElement("div");
      titleDiv.classList.add("explore-title"); // Applying the new CSS class for title div
      titleDiv.append(title);

      let imgDiv = document.createElement("div");
      imgDiv.append(img);
      imgDiv.addEventListener("click", () => {
        window.location.href = `/product/singlepage/${ele._id}`;
      });

      let mainDiv = document.createElement("div");
      mainDiv.classList.add("event-main-div")
      mainDiv.append(imgDiv, titleDiv);
      document.getElementById("box").append(mainDiv);
    });
  };

  const allproducts = () => {
    fetch(`/product/allproduct`)
      .then((response) => response.json())
      .then((response) => display(response))
      .catch((error) => console.log(error));
  };

  const filterdata = (uifilter) => {
    fetch(`/product/filter?category=${uifilter}`)
      .then((response) => response.json())
      .then((response) => display(response))
      .catch((error) => console.log(error));
  };

  document.getElementById("all").addEventListener("click", allproducts);
  document.getElementById("sports").addEventListener("click", () => filterdata("sports"));
  document.getElementById("concert").addEventListener("click", () => filterdata("concert"));
  document.getElementById("conference").addEventListener("click", () => filterdata("conference"));
  document.getElementById("notebook").addEventListener("click", () => filterdata("notebook"));
  document.getElementById("camera").addEventListener("click", () => filterdata("camera"));
  document.getElementById("headphones").addEventListener("click", () => filterdata("headphones"));
  document.getElementById("other").addEventListener("click", () => filterdata("other"));

  document.getElementById("search").addEventListener("input", () => {
    search();
  });

  const search = () => {
    let value = document.getElementById("search").value;
    fetch(`/product/search?query=${value}`)
      .then((data) => data.json())
      .then((res) => display(res));
  };
</script>

</html>

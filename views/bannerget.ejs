<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banner Section</title>
    <link rel="stylesheet" href="/css/adminNav.css">
</head>

<body>
    <div class="row">
        <!-- Sidebar -->
        <%- include('adminNav') %>

        <!-- Main Content -->
        <div class="content">
            <h1 class="text-white">Banner Section</h1>

            <div class="add-banner">
                <button>
                    <a href="/product/addbanner" class="text-white">+ Add Banner</a>
                </button>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% banners.forEach((item) => { %>
                        <tr>
                            <td>
                                <img src="/images/<%= item.img %>" alt="banner" class="banner-img" width="60">
                            </td>
                            <td>
                                <button class="get-banner-btn"><a href="/product/editbanner?banner_id=<%= item._id %>">‚úèÔ∏è</a></button>
                            </td>
                            <td>
                                <button onclick="deleteBanner('<%= item._id %>')" class="get-banner-btn">üóëÔ∏è</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        async function deleteBanner(id) {
            if (confirm("Are you sure you want to delete this banner?")) {
                try {
                    const response = await fetch(`/product/delete?banner_id=${id}`, {
                        method: 'POST'
                    });

                    const result = await response.json();

                    if (result.status) {
                        location.reload();
                    } else {
                        alert("Failed to delete the banner.");
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred while deleting.');
                }
            }
        }
    </script>

</body>

</html>

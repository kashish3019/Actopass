<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offer get</title>
    <link rel="stylesheet" href="/css/adminNav.css">
</head>

<body>
    <div class="row">
        <!-- Sidebar -->
        <%- include('adminNav') %>

        <!-- Main Content -->
        <div class="content">
            <h1 class="text-white">offer Section</h1>
            <div class="add-banner">
                <button>
                    <a href="/product/addoffer" class="text-white">+ Add offer</a>
                </button>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% offers.forEach((item) => { %>
                        <tr>
                            <td>
                                <img src="/images/<%= item.img %>" alt="offer"  width="500px;" style="border-radius:5px">
                            </td>
                            <td>
                                <button class="get-banner-btn"><a href="/product/editoffer?offer_id=<%= item._id %>">‚úèÔ∏è</a></button>
                            </td>
                            <td>
                                <button onclick="deleteoffer('<%= item._id %>')" class="get-banner-btn">üóëÔ∏è</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
<script>
    async function deleteoffer(id) {
    if (confirm("Are you sure you want to delete this offer?")) {
        try {
            const response = await fetch(`/product/deleteoffer/${id}`, {
                method: 'DELETE',
            });

            const result = await response.json();

            if (result.status) {
                alert("Banner deleted successfully.");
                location.reload();
            } else {
                alert("Failed to delete the banner.");
            }
        } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while deleting.');
        }
    }
}

</script>
</body>

</html>
